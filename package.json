{
	"name": "wellawork.ro",
	"version": "1.0.0",
	"description": "Presentation website for WellaWork.ro",
	"keywords": [
		"node",
		"api",
		"typescript"
	],
	"author": "Gabriel David",
	"license": "GNU",
	"homepage": "https://github.com/Tripsy/wellawork.test#readme",
	"bugs": {
		"url": "https://github.com/Tripsy/wellawork.test/issues"
	},
	"type": "module",
	"packageManager": "pnpm@10.28.2",
	"engines": {
		"node": ">=22.0.0",
		"pnpm": ">=9.0.0"
	},
	"scripts": {
		"dev": "next dev -p 80 --turbopack",
		"build": "next build",
		"start": "PORT=80 node .next/standalone/server.js",
		"biome": "NODE_OPTIONS=--no-deprecation biome check --write",
		"madge": "madge --circular src"
	},
	"nodemonConfig": {
		"watch": [
			"src"
		],
		"ext": "ts,json",
		"exec": "tsx ./src/app.ts"
	},
	"dependencies": {
		"@radix-ui/react-label": "^2.1.8",
		"@radix-ui/react-slot": "^1.2.4",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cmdk": "^1.1.1",
		"dayjs": "^1.11.19",
		"fast-deep-equal": "^3.1.3",
		"ioredis": "^5.9.2",
		"lucide-react": "^0.563.0",
		"next": "^16.1.6",
		"nodemailer": "^7.0.13",
		"nunjucks": "^3.2.4",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"sanitize-html": "^2.17.0",
		"tailwind-animate": "^0.2.10",
		"tailwind-merge": "^3.4.0",
		"uuid": "^13.0.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@tailwindcss/postcss": "^4.1.18",
		"@types/node": "^25.1.0",
		"@types/nodemailer": "^7.0.9",
		"@types/nunjucks": "^3.2.6",
		"@types/react": "^19.2.10",
		"@types/react-dom": "^19.2.3",
		"@types/sanitize-html": "^2.16.0",
		"autoprefixer": "^10.4.23",
		"madge": "^8.0.0",
		"mailtrap": "^4.4.0",
		"postcss": "^8.5.6",
		"tailwindcss": "^4.1.18",
		"tsx": "^4.21.0"
	}
}
